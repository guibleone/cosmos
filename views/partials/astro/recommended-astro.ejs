<ul>
  <% if (astros.length > 0) { %> <% astros.forEach(astro => { %>
  <li>
    <article>
      <div class="image">
        <img src="<%= astro.image_url %>" alt="Imagem do <% astro.name %>" />
      </div>

      <div class="infos">
        <h2><%= astro.name %></h2>
        <p><%= astro.description %></p>
        <a href="/astros/<%= astro.id_astro %>">saiba mais</a>
      </div>
    </article>
  </li>
  <% }); %> <% } else { %>
  <li>Nenhum astro recomendado encontrado.</li>
  <% } %>
</ul>
